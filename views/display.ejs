<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/display.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bangers&family=Birthstone&family=Chocolate+Classical+Sans&family=Knewave&family=Noto+Sans:ital,wght@0,100..900;1,100..900&family=Staatliches&display=swap" rel="stylesheet">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@emailjs/browser@3/dist/email.min.js"></script>

</head>
<body>
    <div class="main">
        
        <header>
            <nav>
                <a href="index.html" style="text-decoration: none; color: black;"><h1>BiteBack</h1></a>
                <div class="header">
                    <li><a href="index.html"><h3>Home</h3></a></li>
                    <li><a href="aboutus.html"><h3>about us</h3></a></li>
                    <li><a><h3>donate</h3></a></li>
                    <li><a href="contact.html"><h3>contact</h3></a></li>
                    
                </div>
            </nav>
        </header>
        <section>
            <div id="postContainer">
                <ul>
                    <% posts.forEach(post => { %>
                        <li>
                            <h3><%= post.foodName %></h3>
                            <p>Quantity: <%= post.quantity %></p>
                            <p>Category: <%= post.category %></p>
                            <a href="/post/<%= post.id %>">View Details</a>
                        </li>
                    <% }) %>
                </ul>
            </div>
      
        </section>
        
        
    </div>
</body>

</html>